#ifndef PITIVI_VIEWERPLAYER_H
#define PITIVI_VIEWERPLAYER_H

/*
 * Potentially, include other headers on which this header depends.
 */

#include <glib.h>
#include <gtk/gtk.h>

/*
 * Type macros.
 */

#define PITIVI_VIEWERPLAYER_TYPE (pitivi_viewerplayer_get_type ())
#define PITIVI_VIEWERPLAYER(obj) (GTK_CHECK_CAST ((obj), PITIVI_VIEWERPLAYER_TYPE, PitiviViewerPlayer))
#define PITIVI_VIEWERPLAYER_CLASS(klass) (GTK_CHECK_CLASS_CAST ((klass), PITIVI_VIEWERPLAYER_TYPE, PitiviViewerPlayerClass))
#define PITIVI_IS_VIEWERPLAYER(obj) (GTK_CHECK_TYPE ((obj), PITIVI_VIEWERPLAYER_TYPE))
#define PITIVI_IS_VIEWERPLAYER_CLASS(klass) (G_TYPE_CHECK_CLASS_TYPE ((klass), PITIVI_VIEWERPLAYER_TYPE))
#define PITIVI_VIEWERPLAYER_GET_CLASS(obj) (G_TYPE_INSTANCE_GET_CLASS ((obj), PITIVI_VIEWERPLAYER_TYPE, PitiviViewerPlayerClass))

typedef struct _PitiviViewerPlayer PitiviViewerPlayer;
typedef struct _PitiviViewerPlayerClass PitiviViewerPlayerClass;
typedef struct _PitiviViewerPlayerPrivate PitiviViewerPlayerPrivate;

struct _PitiviViewerPlayer
{
  GtkWidget parent;

  /* instance public members */

  /* private */
  PitiviViewerPlayerPrivate *private;
};

struct _PitiviViewerPlayerClass
{
  GtkWidgetClass parent;
  /* class members */
};

/* used by PITIVI_VIEWERPLAYER_TYPE */
GType pitivi_viewerplayer_get_type (void);
/*
 * Method definitions.
 */


GtkWidget	*pitivi_viewerplayer_new(void);
void		pitivi_viewerplayer_set_logo (PitiviViewerPlayer *view, GdkPixbuf *logo_pixbuf);

#endif
